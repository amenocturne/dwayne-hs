{
  "name": "dwayne-web",
  "version": "1.0.0",
  "description": "Frontend for Dwayne task manager",
  "type": "module",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/bundle.js",
    "esbuild:watch": "esbuild src/main.ts --bundle --outfile=dist/bundle.js --watch=forever",
    "browser-sync": "browser-sync start --server --files 'dist/**/*.js, src/**/*.css, *.html' --port 3000 --no-notify --no-open",
    "dev": "npm-run-all --parallel esbuild:watch browser-sync"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "snabbdom": "^3.6.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "browser-sync": "^3.0.4",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
